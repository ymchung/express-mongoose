<!DOCTYPE html>
<html>
<head>
	<%- include('../partials/head', { title: 'Agregar producto'}) %>
</head>
<body>
	<%- include('../partials/navbar') %>
	<%- include('../partials/jumbotron', { title: 'Publicar nuevo producto' }) %>

	<div class="container">

		<form action="" method="post" enctype="multipart/form-data">

			<div class="form-group">
				<label for="title">Titulo</label>
				<input type="text" class="form-control" id="title" name="title">
			</div>

			<div class="form-group">
			<label for="price">Precio</label>
		      <div class="input-group">
		        <div class="input-group-prepend">
		          <div class="input-group-text">$</div>
		        </div>
		        <input type="text" class="form-control" id="price" name="price">
		      </div>
			</div>

			<div class="form-group">
				<label for="description-small">Descripción corta</label>
				<input type="text" class="form-control" id="description" name="descriptionS">
			</div>

			<div class="form-group">
			    <label for="description-large">Descripción larga</label>
			    <textarea class="form-control" id="description-large" rows="3" name="descriptionL"></textarea>
			 </div>

			<div class="form-group">
				<div class="custom-file">
					<input type="file" class="custom-file-input" id="imageFile" name="imageFile">
					<label class="custom-file-label" for="imageFile">Agregar imagen</label>
				</div>
			</div>

			<button type="submit" class="btn btn-primary">Publicar</button>
		</form>

	</div>
</body>
</html>
