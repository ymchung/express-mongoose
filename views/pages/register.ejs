<!DOCTYPE html>
<html>
<head>
	<%- include('../partials/head', { title: 'Registrarse'}) %>
</head>
<body>
	<%- include('../partials/navbar') %>
	<%- include('../partials/jumbotron', { title: 'Registrarse' }) %>

	<div class="container">
		<p style="color:red">
			<% if(typeof error != 'undefined') { %> 
				<%= error %>
			<% } %>
		</p>

		<form action="" method="post" enctype="multipart/form-data">

			<div class="form-group">
				<label for="username">Usuario</label>
				<input type="text" class="form-control" id="username" name="username" value="<%= (typeof error != 'undefined')? username : '' %>">
			</div>

			<div class="form-group">
				<label for="firstname">Nombre</label>
				<input type="text" class="form-control" id="firstname" name="firstname" value="<%= (typeof error != 'undefined')? firstname : '' %>">
			</div>

			<div class="form-group">
				<label for="lastname">Apellido</label>
				<input type="text" class="form-control" id="lastname" name="lastname" value="<%= (typeof error != 'undefined')? lastname : '' %>">
			</div>

			<div class="form-group">
				<label for="email">E-mail</label>
				<input type="email" class="form-control" id="email" name="email" value="<%= (typeof error != 'undefined')? email : '' %>">
			</div>

			<div class="form-group">
				<label for="password">Contraseña</label>
				<input type="password" class="form-control" id="password" name="password">
			</div>

			<div class="form-group">
				<label for="r_password">Repetir contraseña</label>
				<input type="password" class="form-control" id="r_password" name="r_password">
			</div>

			<button type="submit" class="btn btn-primary">Registrarse</button>
		</form>

	</div>
</body>
</html>